<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quanlysinhvienadmin.attendanceActivity">
    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Contact Id:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtngay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ngày điểm danh ở đây"
        android:inputType="textPersonName"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Id:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập Id sinh viên ở đây"
        android:inputType="textPersonName"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Lớp:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtlop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Class ở đây"
        android:inputType="textEmailAddress"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn Hình:"
        android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCapture"
            android:src="@drawable/ic_baseline_center_focus_weak_24" />

        <ImageButton
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_collections_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_baseline_photo_size_select_large_24"
        tools:ignore="VectorDrawableCompat" />
    <Button
        android:onClick="xuLyThemMoi"
        android:id="@+id/btnDongYThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đồng Ý Thêm"
        android:textSize="15sp" />
</LinearLayout>